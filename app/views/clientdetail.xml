<Alloy>
	<Model src="dummy" />
  <Window id="clientdetail_window" title="Client Detail" backgroundColor="white">
  	<RightNavButton platform="ios">
	   <Button systemButton="Ti.UI.iPhone.SystemButton.EDIT" onClick="stageHandler" /> 
	</RightNavButton>
	  <TableView id="clientdetail_table"  backgroundColor="transparent" >
	  	<TableViewSection id="contactdetail_section" headerTitle="ContactDetails">
		  <TableViewRow id="clientdetail_row" backgroundColor="transparent" opacity="0" height="Ti.UI.SIZE" color="#333">
		  	  <Label id="Firstname" text="Firstname:" left="20" top="10"/>
		  	  <Label id="Firstname" text="{dummy.firstname}" left="120" top="10"/>
		  	  <Label id="Lastname" text="Lastname:" left="20" top="40"/>
		  	  <Label id="Lastname" text="{dummy.lastname}" left="120" top="40"/>
		  	  <Label id="phone" text="Phone:" left="20" top="70"/>
	   		  <Label id="phone" text="{dummy.phone}" left="120" top="70"/>
	   		  <Label id="email" text="Email:" left="20" top="100"/>
	   		  <Label id="email" text="{dummy.email}" left="120" top="100"/>
	   		  <Label id="fulladdress" text="Address:" left="20" top="130" />
	   		  <Label id="fulladdress" text="{dummy.fulladdress}" left="120" top="130" />
	   		  <Label id="company" text="Company:" left="20" top="180"/>
	   		  <Label id="company" text="{dummy.company}" left="120" top="180"/>
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection id="pendinginvoice_section" headerTitle="Pending invoice">
		  <TableViewRow id="invoiceclientdetail_row" Title="invoiceClientDetail">
	   		  <Label id="invoice" text="{dummy.invoice}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection id="pendingproject_section" headerTitle="Pending Project">
		  <TableViewRow id="projectclientdetail_row" Title="projectClientDetail">
	   		  <Label id="project" text="{dummy.project}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection id="pendingproposal_section" headerTitle="Pending Proposal">
		  <TableViewRow id="proposalclientdetail_row" Title="proposalClientDetail">
	   		  <Label id="proposal" text="{dummy.proposal}" />
		  </TableViewRow>
	  </TableViewSection>
	  </TableView>
  </Window>
</Alloy>