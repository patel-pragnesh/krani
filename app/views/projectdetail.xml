<Alloy>
	<Model src="dummy" />
  <Window id="projectdetail_window" title="project Detail" backgroundColor="white">
	  <TableView id="projectdetail_table"  backgroundColor="transparent">
	  	<TableViewSection headerTitle="{dummy.projectname}">
		  <TableViewRow id="projectdetail_row"  height="180">
		  	  <Label id="label_header" left="20" color="#333" top="5" text="{dummy.projectname}" />
		  	  <Label left="20" color="#333" top="40" text="Client:" />
	   		  <Button left="100" top="35" title="{dummy.fullname}" onClick="nameAction" />
	   		  <Label left="20" color="#333" top="60" text="Phone:" />
	   		  <Button left="100" top="55" title="{dummy.phone}" onClick="phoneAction"/>
	   		  <Label left="20" color="#333" top="80" text="Email:" />
	   		  <Button left="100" top="75" title="{dummy.email}" onClick="emailAction"/>
	   		  <Label left="20" color="#333" top="100" text="Company:" />
	   		  <Button left="100" top="95" title="{dummy.company}" />
	   		  <Label left="20" color="#333" top="120" text="Address:" />
	   		  <Button left="100" top="115" title="{dummy.address}" onClick="addressAction"/>
	   		  <Button left="100" top="135" title="{dummy.citystate}" onClick="addressAction" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Pending Invoice">
		  <TableViewRow id="invoiceprojectdetail_row" Title="invoiceprojectDetail">
	   		  <Label id="invoice" text="{dummy.invoice}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Percent Complete & Date Due">
		  <TableViewRow id="percentcompletedetail_row" Title="percentcompleteDetail">
	   		  <Label id="percentcomplete" text="{dummy.percentcomplete}" />
		  </TableViewRow>
		  <TableViewRow id="dateduedetail_row" Title="datedueDetail">
	   		  <Label id="datedue" text="{dummy.datedue}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Next Appointment">
		  <TableViewRow id="nextapptdetail_row" Title="nextapptDetail">
	   		  <Label id="nextappt" text="{dummy.nextappt}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Job Details">
		  <TableViewRow id="notesdetail_row" Title="notesDetail">
	   		  <Label id="notes" text="{dummy.notes}" />
		  </TableViewRow>
	  </TableViewSection>
	  </TableView>
  </Window>
</Alloy>