<Alloy>
	<Model src="labor"/>
	<Collection src="schedule"/>
	<Tab id="schedule_tab" title="SCHEDULE" icon="calendar112.png">
  <Window id="schedule_window" backgroundColor="white" title="Calendar">
  	<RightNavButton platform="ios">
	   <Button title="Refresh" onClick="refreshCalendar" /> 
	</RightNavButton>
	  <!--TableView id="schedule_table" backgroundColor="transparent" dataCollection="schedule"  search="search_history" dataTransform="transformFunction" filterAttribute="title">
			<SearchBar id="search_history" height="43" />
		  <TableViewRow id="events_row" backgroundColor="transparent" height="75" opacity="0" top="75" color="transparent" title="{title}">
			<Label id="label_header" color="#333" left="20" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" text="{custom}"/>
			<Label  id="label_sub3" color="orange" left="20" top="40" text="{start}"/>
			<Label  id="label_sub3" color="#333" left="20" top="55" text="{end}"/>
		</TableViewRow>
	 </TableView-->
	 	<ListView id="schedule_list" height="Ti.UI.Size" defaultItemTemplate="template">
		<SearchBar barColor="gray" />
		<HeaderView>
                <View backgroundColor="#DDD" height="Ti.UI.SIZE">
                    <Label>Events</Label>
                </View>>
        </HeaderView>
		<Templates>
			<ItemTemplate name="template" backgroundColor="white" height="83" onClick="selectItem" >
				<Label id="label_header" color="#333"  left="20" top="10" bindId="info"/>
				<Label id="label_sub1" color="#330"  left="20" top="40" bindId="start"/>
				<Label  id="label_sub2" color="orange"  left="20" top="52" bindId="end"/>
				<ImageView bindId="img" id="icon" height="10" width="70" left="20" top="67"/>
				<Button id="next_button" bindId="all" image="light_info.png" right="20" top="30" width="20" height="20" onClick="doClick"/>
			</ItemTemplate>
		</Templates>
		<ListSection id="schedule_section" headerTitle="Jobs" dataCollection="schedule" dataFilter="filterFunction" dataTransform="transformFunction">
			<ListItem id="schedule_listitem" all:text="{title}" info:text="{custom}" start:text="{start}" end:text="{end}" img:image="{img}"/>
		</ListSection>
   </ListView>
		<Toolbar id="sortview" platform="ios" bottom="0" borderTop="true" borderBottom="false">
			<Items >
				<FlexSpace/>
					<Button top="1" title="Check Events" image="checkevent.png" onClick="CheckEvents"/>
				<FlexSpace/>
					<Button title="Today" onClick="buttonAction"/>
					<Button title="ThisWeek" onClick="buttonAction"/>
					<Button title="NextWeek" onClick="buttonAction"/>
				<FlexSpace/>
					<Button top="5" title="Now" onClick="CreateEvents"/>
					<Button title="Future" onClick="createEventFuture"/>
					<Button top="20" title="Multiple" onClick="multiplepicker"/>
				<FlexSpace/>
					<Button top="1" image="createevent.png" title="create event" onClick="sharedCalendar"/>
				<FlexSpace/>
			</Items>
		</Toolbar>
  </Window>
 </Tab>
</Alloy>