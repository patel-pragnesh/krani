<Alloy>
	<Model src="dummy" />
	<Collection src="adhoc" />
	<Tab id="tab_invoicedetail">
  <Window id="invoicedetail_window" title="Invoice by Customer Name" backgroundColor="white">
	  <TableView id="invoicedetail_table"  backgroundColor="transparent">
	  	<TableViewSection  headerTitle="Summary">
		  <TableViewRow id="invoicenumber_row" color="gray" Title="Summary" height="100">
		  	  <Label id="invoicenumber" color="#404040" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="10" text="{dummy.invoicenumber}" />
	   		  <Label id="header" color="#404040" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="25" text="{dummy.firstname} {dummy.lastname}" />
	   		  <Label id="customernumber" color="gray" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="65" text="Cust no: {dummy.customernumber}" />
	   	  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection  headerTitle="Details">
	  	<TableViewRow id="totalbalance_row" height="200">
	  		<Label id="bal_title" color="gray" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="10" text="balance"/>
	  		  <Label id="balance1" color="red" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="20" text="{dummy.balance}" />
	  		  <Label id="balance2" color="green" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="20" text="{dummy.balance}" />
	  		  <Label id="currency" color="gray" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="90" text="{dummy.currency}" />
	   		  <Label id="total" color="gray"  left="20" top="110" text="{dummy.total}" />
	   		  <Label id="paid" color="gray"  left="20" top="130" text="{dummy.paid}" />
	   		  <Label id="duedate" color="red" right="20" top="110"  text="{dummy.duedate}" />
	   		  <Label id="lastpaiddate" color="gray" right="20" top="130" text="{dummy.lastpaiddate}" />
	   		   <Label id="followupdate" color="gray" right="20" top="150" text="{dummy.followupdate}" />
	   		   <Button id="invoice_button" left="30%" top="170" title="Click to update payment" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"/>
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection  headerTitle="Action">
	  	  <TableViewRow id="action_row" Title="duedate" height="Ti.UI.Size">
	   		  <Button id="phone_button" left="20%" top="10" height="30" width="Ti.UI.SIZE" color="gray" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" 
	   		  	image="light_phone@2x.png" title="{dummy.phone}" onClick="actionPhone" />
	   		  <Button id="email_button" left="20%" top="40" height="30" width="Ti.UI.SIZE" color="gray" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" 
	   		  	image="light_mail@2x.png" title="{dummy.email}" onClick="actioneMail"  />
	   		  <Button id="invoice_button" left="30%" top="70" title="Generate Invoice in PDF" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" onClick="genInvoice"/>
	   		  <Label id="noaction_button" color="blue" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="20" text="NO ACTION" />
		  </TableViewRow>  		 
	  </TableViewSection>
	  <TableViewSection id="projitem_section" headerTitle="Project Items">
	  	<TableViewRow id="jobitem_row" height="Ti.UI.Size"/>
	  </TableViewSection>
	  </TableView>
  </Window>
  </Tab>
</Alloy>