<Alloy>
<Model src="dummy" />
<Tab id="enterclient_tab">
  <Window id="enterclient_window"backgroundColor="white" title="client Entry">
  	<RightNavButton platform="ios">
	   <Button systemButton="Ti.UI.iPhone.SystemButton.SAVE" onClick="saveHandler" /> 
	</RightNavButton>
	  <TableView id="enterclient_table" backgroundColor="transparent" separatorColor="transparent" >
	  	<TableViewRow id="existing" borderColor="white" backgroundColor="#80c342" height="30" opacity="1" Title="Existing">
	  		<Label id="titleinvoiceinput_label" color="white" left="20" text="Client Details"/>
	  		<Button id="check_client" width="20" height="20" right="20" image="dark_search@2x.png"/>
	  	  </TableViewRow>
		  <TableViewRow id="clientdetail_row" backgroundColor="transparent" opacity="0" height="Ti.UI.SIZE" color="#333">
		  	<Label id="tflabel" top="10">Firstname: </Label>
		  	<TextField  top="12" id="clientfirstname_tf"/>
		  	<Label id="tflabel" top="40">Lastname: </Label>
		  	<TextField top="42"  id="clientlastname_tf"></TextField>
		  	<Label id="tflabel" top="70">Phone: </Label>
		  	<TextField top="72" id="clientphone_tf" keyboardType="Ti.UI.KEYBOARD_NUMBER_PAD"></TextField>
		  	<Label id="tflabel" top="100">Email: </Label>
		  	<TextField top="102" id="clientemail_tf"></TextField>
		  	<Label id="tflabel" top="130">Street addr: </Label>
		  	<TextField   top="132" id="clientstreetaddress_tf"></TextField>
		  	<Label id="tflabel" top="160">City: </Label>
		  	<TextField  top="162" id="clientcity_tf"></TextField>
		  	<Label id="tflabel" top="190">State: </Label>
		  	<TextField  top="192" id="clientstate_tf"></TextField>
		  	<Label id="tflabel" top="220">Company: </Label>
		  	<TextField  top="222" id="clientcompany_tf"></TextField>
		  </TableViewRow>
		  <TableViewRow id="itemline_row" height="20" borderColor="white" opacity="0.1" backgroundColor="#80c342" color="white" title="client Details"/>
	  	  <TableViewRow id="cover_row" borderColor="white" backgroundColor="transparent" height="500" opacity="0.1"/>	
		  <TableViewRow id="itemdetail_row" borderColor="white" backgroundColor="white" height="110">
		  	<Label id="tflabelclientname" top="10" text="client Name :"/>
		  	<TextField id="clientname_tf" width="160" left="120" top="12" height="20" ></TextField>	
		  	<Label id="tflabelclientdescr" top="32" text="Description :"/>
		  	<TextField id="clientdescr_tf" width="160" left="120" top="32" height="20" ></TextField>	
		  	<Label id="tflabellineitem" top="60" text="Line Item 1 :"/>
		  	<TextField id="lineitem_tf" width="200" left="120" top="62" height="20" ></TextField>	
		  	<Label id="tflineitemqty" top="80" text="qty(opt) : "/>
		  	<TextField id="lineitemqty_tf" top="82" left="90" hintText="2" width="60" keyboardType="Ti.UI.KEYBOARD_NUMBER_PAD"></TextField>	
		  	<Label id="tflineitemprice" left="180" top="80" text="price(opt) : "/>
		  	<TextField id="lineitemprice_tf" left="260" top="82" width="80" hintText="120" returnKeyType="Ti.UI.RETURNKEY_DONE" keyboardType="Ti.UI.KEYBOARD_DECIMAL_PAD">
				<KeyboardToolbar>
			    <Toolbar id="donetoolbar" platform="ios" bottom="0" borderTop="true" borderBottom="false">
	            <Items>
	            	<FlexSpace/>
	            	<Button systemButton="DONE" onClick="allTFBlur"/>
	            </Items>
       		    </Toolbar>
       		    </KeyboardToolbar>
		  	</TextField> 		  	
		  </TableViewRow>
		  <TableViewRow id="addrow_row" borderColor="white">
		  	<Button id="addrow_button" image="light_add.png" width="20" height="20" right="20" onClick="addItem" />	
		  </TableViewRow>
		  <TableViewRow id="itemlineend_row" height="2" borderColor="white" backgroundColor="#80c342" />
		  <TableViewRow id="totalrow" backgroundColor="transparent" right="50" opacity="0" color="#333" Title="Total: ">
		  	<Label id="totallabel" left="150" text="total :"/>
		  	<Label id="totalvalue" left="200" text="100"/>
		  </TableViewRow>
	  </TableView>
  </Window>
  </Tab>
</Alloy>